{
  "@context": [
    "https://linkedsoftwaredependencies.org/bundles/npm/@solid/community-server/^8.0.0/components/context.jsonld",
    "https://linkedsoftwaredependencies.org/bundles/npm/asynchronous-handlers/^1.0.0/components/context.jsonld",
    "https://linkedsoftwaredependencies.org/bundles/npm/@janeirodigital/sai-components/^1.0.0/components/context.jsonld"
  ],
  "import": ["css:config/http/handler/handlers/storage-description.json"],
  "@graph": [
    {
      "comment": "These are all the handlers a request will go through until it is handled.",
      "@id": "urn:solid-server:default:HttpHandler",
      "@type": "SequenceHandler",
      "handlers": [
        { "@id": "urn:solid-server:default:Middleware" },
        {
          "@id": "urn:solid-server:default:BaseHttpHandler",
          "@type": "StatusWaterfallHandler",
          "handlers": [
            { "@id": "urn:sai:default:AuthorizationAgentHandler" },
            { "@id": "urn:solid-server:default:StaticAssetHandler" },
            { "@id": "urn:solid-server:default:OidcHandler" },
            { "@id": "urn:solid-server:default:NotificationHttpHandler" },
            { "@id": "urn:solid-server:default:StorageDescriptionHandler" },
            { "@id": "urn:solid-server:default:AuthResourceHttpHandler" },
            { "@id": "urn:solid-server:default:IdentityProviderHandler" },
            { "@id": "urn:solid-server:default:LdpHandler" }
          ]
        }
      ]
    },
    {
      "comment": "SAI",
      "@id": "urn:sai:default:AuthorizationAgentHandler",
      "@type": "RouterHandler",
      "baseUrl": { "@id": "urn:solid-server:default:variable:baseUrl" },
      "targetExtractor": { "@id": "urn:solid-server:default:TargetExtractor" },
      "allowedPathNames": ["^/.sai/.*"],
      "handler": { "@id": "urn:sai:default:AuthorizationAgentParsingHandler" }
    },
    {
      "@id": "urn:sai:default:AuthorizationAgentParsingHandler",
      "@type": "ParsingHttpHandler",
      "requestParser": { "@id": "urn:solid-server:default:RequestParser" },
      "errorHandler": { "@id": "urn:solid-server:default:ErrorHandler" },
      "responseWriter": { "@id": "urn:solid-server:default:ResponseWriter" },
      "operationHandler": {
        "@id": "urn:sai:default:RestRouter",
        "@type": "StatusWaterfallHandler",
        "handlers": [
          { "@id": "urn:sai:default:AuthorizationAgentDiscoveryHandler" },
          { "@id": "urn:sai:default:AuthorizationAgentFrontendApi" }
        ]
      }
    },
    {
      "comment": "Handles reading and writing notification subscriptions and channels.",
      "@id": "urn:sai:default:AuthorizationAgentDiscoveryHandler",
      "@type": "OperationRouterHandler",
      "baseUrl": { "@id": "urn:solid-server:default:variable:baseUrl" },
      "allowedPathNames": ["^/.sai/agents/.*"],
      "allowedMethods": ["GET", "HEAD"],
      "handler": {
        "comment": "Converts outgoing responses based on the user preferences",
        "@type": "ConvertingOperationHttpHandler",
        "converter": { "@id": "urn:solid-server:default:RepresentationConverter" },
        "operationHandler": {
          "@id": "urn:sai:default:AgentIdHandler",
          "comment": "Responds with ClientID document and handles agent registration discovery.",
          "@type": "AgentIdHandler",
          "credentialsExtractor": { "@id": "urn:solid-server:default:CredentialsExtractor" },
          "sessionManager": { "@id": "urn:sai:default:SessionManager" }
        }
      }
    },
    {
      "comment": "Handles RPC API for the frontend.",
      "@id": "urn:sai:default:AuthorizationAgentFrontendApi",
      "@type": "OperationRouterHandler",
      "baseUrl": { "@id": "urn:solid-server:default:variable:baseUrl" },
      "allowedPathNames": ["^/.sai/api$"],
      "allowedMethods": ["POST"],
      "handler": {
        "@id": "urn:sai:default:FrontendRPCHandler",
        "comment": "Frontend RPC API",
        "@type": "ApiHandler",
        "cookieStore": { "@id": "urn:solid-server:default:CookieStore" },
        "webIdStore": { "@id": "urn:solid-server:default:WebIdStore" },
        "uiPushSubscriptionStore": { "@id": "urn:sai:default:UiPushSubscriptionStore" },
        "sessionManager": { "@id": "urn:sai:default:SessionManager" }
      }
    },
    {
      "@id": "urn:sai:default:SessionManager",
      "comment": "Manages SAI sessions.",
      "@type": "SessionManager",
      "baseUrl": { "@id": "urn:solid-server:default:variable:baseUrl" },
      "jwkGenerator": { "@id": "urn:solid-server:default:JwkGenerator" },
      "expiration": 60
    },
    {
      "comment": "Vapid private key.",
      "@id": "urn:sai:default:variable:vapidPublicKey",
      "@type": "Variable"
    },
    {
      "comment": "Vapid private key.",
      "@id": "urn:sai:default:variable:vapidPublicKey",
      "@type": "Variable"
    },
    {
      "comment": "Push sender.",
      "@id": "urn:sai:default:variable:pushSender",
      "@type": "Variable"
    },
    {
      "comment": "Encoded private JWK.",
      "@id": "urn:sai:default:variable:encodedPrivateJwk",
      "@type": "Variable"
    },
    {
      "@id": "urn:solid-server-app-setup:default:CliExtractor",
      "@type": "YargsCliExtractor",
      "parameters": [
        {
          "@type": "YargsParameter",
          "name": "vapidPublicKey",
          "options": {
            "demandOption": true,
            "requiresArg": true,
            "type": "string",
            "describe": "VAPID public key (Push Notifications)."
          }
        },
        {
          "@type": "YargsParameter",
          "name": "vapidPrivateKey",
          "options": {
            "demandOption": true,
            "requiresArg": true,
            "type": "string",
            "describe": "VAPID private key (Push Notifications)."
          }
        },
        {
          "@type": "YargsParameter",
          "name": "pushSender",
          "options": {
            "demandOption": true,
            "requiresArg": true,
            "type": "string",
            "describe": "IRI denoting push notifications sender (mailto: or https:)."
          }
        },
        {
          "@type": "YargsParameter",
          "name": "encodedPrivateJwk",
          "options": {
            "demandOption": true,
            "requiresArg": true,
            "type": "string",
            "describe": "Base64url encoded private JWK."
          }
        }
      ]
    },
    {
      "@id": "urn:solid-server-app-setup:default:ShorthandResolver",
      "@type": "CombinedShorthandResolver",
      "resolvers": [
        {
          "CombinedShorthandResolver:_resolvers_key": "urn:sai:default:variable:vapidPublicKey",
          "CombinedShorthandResolver:_resolvers_value": {
            "@type": "KeyExtractor",
            "key": "vapidPublicKey"
          }
        },
        {
          "CombinedShorthandResolver:_resolvers_key": "urn:sai:default:variable:vapidPrivateKey",
          "CombinedShorthandResolver:_resolvers_value": {
            "@type": "KeyExtractor",
            "key": "vapidPrivateKey"
          }
        },
        {
          "CombinedShorthandResolver:_resolvers_key": "urn:sai:default:variable:pushSender",
          "CombinedShorthandResolver:_resolvers_value": {
            "@type": "KeyExtractor",
            "key": "pushSender"
          }
        },
        {
          "CombinedShorthandResolver:_resolvers_key": "urn:sai:default:variable:encodedPrivateJwk",
          "CombinedShorthandResolver:_resolvers_value": {
            "@type": "KeyExtractor",
            "key": "encodedPrivateJwk"
          }
        }
      ]
    },
    {
      "@id": "urn:sai:default:UiPushSubscriptionStore",
      "@type": "UiPushSubscriptionStore",
      "storage": { "@id": "urn:solid-server:default:AccountStorage" }
    },
    {
      "@id": "urn:solid-server:default:PrimaryParallelInitializer",
      "@type": "ParallelHandler",
      "handlers": [{ "@id": "urn:sai:default:UiPushSubscriptionStore" }]
    },
    {
      "@id": "urn:solid-server:default:EarlyProcessParallelInitializer",
      "@type": "ParallelHandler",
      "handlers": [{ "@id": "urn:sai:default:UiPushSubscriptionStore" }]
    },
    {
      "@id": "urn:sai:default:OverrideJwkGenerator",
      "@type": "Override",
      "overrideInstance": {
        "@id": "urn:solid-server:default:JwkGenerator"
      },
      "overrideParameters": {
        "@type": "EnvJwkGenerator",
        "encodedPrivateJwk": { "@id": "urn:sai:default:variable:encodedPrivateJwk" }
      }
    }
  ]
}
